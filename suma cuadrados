#include "stdafx.h"
#include "conio.h"
#include <iostream>
#include "math.h"

using namespace std;

void main()

{
  int suma,N;
  float i;
  cout<<"SUMA DE LOS CUADRADOS \n\n";

  cout<<"INGRESAR EL VALOR DE N:";
  cin>> N;
  suma=0;
  for(i=1;i<=N;i++)
suma=suma+pow(i,2);
  cout<<"La suma de los "<< N <<" CUADRADOS es:" << suma;
  getch();

 }
