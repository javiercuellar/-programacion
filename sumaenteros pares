#include "stdafx.h"
#include "conio.h"
#include <iostream>
#include "math.h"

using namespace std;

void main()

{
  int suma,i,N;
  cout<<"SUMA DE LOS ENTEROS PARES \n\n";

  cout<<"INGRESAR EL VALOR DE N:";
  cin>> N;
  suma=0;
  for(i=2;i<=N;i+=2)
suma=suma+i;
  cout<<"La suma de los "<< N <<" pares es:" << suma;

  getch();

 }
